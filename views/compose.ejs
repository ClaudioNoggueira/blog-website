<%- include( 'partials/header' ); %>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="mb-3">
            <label class="form-label" for="postTitle">Title</label>
            <input class="form-control" type="text" name="postTitle" id="postTitle" autofocus>
        </div>
        <div class="mb-3">
            <label class="form-label" for="postContent">Post</label>
            <textarea class="form-control" name="postContent" id="txtPostContent" cols="30" rows="5"></textarea>
        </div>
        <br>
        <button class="btn btn-primary" type="submit" name="post" value="">Publish</button>
    </form>
    <%- include( 'partials/footer' ); %>